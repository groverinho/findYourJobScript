{
	"info": {
		"_postman_id": "bede006a-6cbf-48d5-a567-889bf4f8d97c",
		"name": "training",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "{{url}}",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Busqueda en la empresa: \" + pm.iterationData.get(\"name\"), function () {",
							"    let words = pm.environment.get(\"jobs\");",
							"    words = words.split(\",\")",
							"    let foundWords = [];",
							"    let flag = false",
							"    let found = words.some(word => {",
							"        if (pm.response.text().toUpperCase().indexOf(word.toUpperCase()) !== -1) {",
							"            foundWords.push(word);",
							"            flag = true;",
							"        }",
							"    });",
							"",
							"    if(flag){",
							"    console.log(`------------ > HAY ALGÃšN PUESTO VACANTE EN '${pm.iterationData.get(\"name\")}' para los puestos de: '${foundWords.join(\", \")}' | link: ${pm.iterationData.get(\"url\")}`);",
							"    }",
							"",
							"    pm.expect(flag).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{url}}",
					"host": [
						"{{url}}"
					]
				}
			},
			"response": []
		}
	]
}